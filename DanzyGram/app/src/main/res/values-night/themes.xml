<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DanzyGram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar and system colors -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray</item>

        <!-- Custom attributes -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.DanzyGram.Dark.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DanzyGram.Dark.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.DanzyGram.Dark.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.DanzyGram.Dark.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.DanzyGram.Dark.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.DanzyGram.Dark.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DanzyGram.Dark.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.DanzyGram.Dark.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DanzyGram.Dark.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DanzyGram.Dark.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DanzyGram.Dark.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.DanzyGram.Dark.Overline</item>
    </style>

    <!-- Dark Theme Text Appearances -->
    <style name="TextAppearance.DanzyGram.Dark.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="TextAppearance.DanzyGram.Dark.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/gray_light</item>
    </style>
</resources>